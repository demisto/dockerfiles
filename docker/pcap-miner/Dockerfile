# Last modified: 2025-10-20T09:29:43.000000+00:00

FROM demisto/python3:3.12.11.4819260

COPY requirements.txt .

RUN apk update && apk upgrade

RUN apk --update add --no-cache libxml2 \
  libxslt \
  tshark \
  libmagic

# Use version 4.4.9 and up -  if v3.22 has this version, this line can be removed
RUN apk upgrade --no-cache --repository=https://dl-cdn.alpinelinux.org/alpine/edge/community tshark

RUN apk --update add --no-cache --virtual .build-dependencies python3-dev build-base wget git \
  libxml2-dev \
  libxslt-dev \
  && pip install --no-cache-dir -r requirements.txt \
  && apk del .build-dependencies
